@using Seemplexity.Resources
@model Seemplexity.Web.Models.TuristViewModel

<div class="row">
    <div class="col-md-8">
        <div class="form-group">
            <label class="control-label col-md-2">Место @Model.PlaceNumber:</label>
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.PassportSeria, new {@class = "form-control", @placeholder = @Resources.PassportSeria})
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.PassportNumber, new {@class = "form-control", @placeholder = @Resources.PassportNumber})
                    </div>
                </div>
            </div>

            <label class="control-label col-md-2"></label>
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", @placeholder = @Resources.Surname })
                    </div>
                    <div class="col-md-8">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = @Resources.Name })
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

