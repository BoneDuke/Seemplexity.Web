            @Html.Partial("_PayInfoFooter_" + Thread.CurrentThread.CurrentCulture.TwoLetterISOLanguageName)

        <!--</footer>-->
    </div> 

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


